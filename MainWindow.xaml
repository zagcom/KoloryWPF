<Window x:Class="KoloryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoloryWPF"
        mc:Ignorable="d"
        Title="Kolory" Height="450" Width="800" MinHeight="450" MinWidth="797"
        KeyDown="Window_KeyDown"
        Closed="Window_Closed">
    
    <Grid>        
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" Stroke="Black" Margin="10,10,10,100"/>
        <Slider x:Name="sliderR" Margin="10,0,10,70" Maximum="255" VerticalAlignment="Bottom" Height="20" ValueChanged="sliderR_ValueChanged"/>
        <Slider x:Name="sliderG" Margin="10,0,10,40" Maximum="255" VerticalAlignment="Bottom" Height="20" ValueChanged="sliderR_ValueChanged"/>
        <Slider x:Name="sliderB" Margin="10,0,10,10" Maximum="255" VerticalAlignment="Bottom" Height="20" ValueChanged="sliderR_ValueChanged"/>
    </Grid>
</Window>
